<?xml version="1.0" encoding="utf-8"?>
<com.github.clans.fab.FloatingActionMenu
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:src="@drawable/ic_add_white_24dp"
    fab:menu_fab_size="normal"
    fab:menu_colorNormal="@color/colorAccent"
    fab:menu_colorPressed="@color/colorAccent"
    fab:menu_openDirection="up"
    >

    <com.github.clans.fab.FloatingActionButton
        android:id="@+id/fab_add_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        fab:fab_size="mini"
        android:src="@drawable/ic_action_studant"
        fab:fab_colorNormal="@color/colorPrimary"
        fab:fab_colorPressed="@color/colorPrimary"
        fab:fab_label="@string/add_record"
        />
    <com.github.clans.fab.FloatingActionButton
        android:id="@+id/fab_add_classroom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        fab:fab_size="mini"
        android:src="@drawable/ic_action_classroom"
        fab:fab_colorNormal="@color/colorPrimary"
        fab:fab_colorPressed="@color/colorPrimary"
        fab:fab_label="@string/add_classroom"
        />

</com.github.clans.fab.FloatingActionMenu>